<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/bg_main"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/slide_chat_date"
        android:gravity="left"
        android:text="날짜"
        android:textSize="10dp"
        android:paddingHorizontal="6dp"
        android:textColor="@color/white"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/slide_chat_photo"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/logo_2"
            android:padding="1dp"
            app:civ_border_width="0.1dp"
            app:civ_border_color="@color/white"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/slide_chat_name"
                    android:text="이름"
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/slide_chat_new_message_count"
                    android:visibility="gone"
                    android:text="12"
                    android:textSize="13dp"
                    android:paddingHorizontal="6dp"
                    android:background="@drawable/item_new_message_count"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/slide_chat_last_message"
                android:text=""
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginVertical="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>

</LinearLayout>