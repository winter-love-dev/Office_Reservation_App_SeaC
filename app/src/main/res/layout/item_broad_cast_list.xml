<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="150dp"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/broad_list_host_photo"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_2"
                android:layout_width="150dp"
                android:layout_height="90dp" />

            <TextView
                android:text="실시간"
                android:textSize="9dp"
                android:paddingVertical="1dp"
                android:paddingHorizontal="3dp"
                android:textColor="@color/white"
                android:background="@drawable/item_live"
                android:layout_margin="5dp"
                android:layout_gravity="bottom|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/broad_list_title"
                android:textSize="20dp"
                android:textColor="@color/bg_main"
                android:text="00 님이 방송중입니다"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/broad_list_host_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="호스트 닉네임"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/broad_list_start_time"
                android:textSize="15dp"
                android:text="방송 시작 시간"
                android:textColor="@color/gray"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    
    <View
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_height="0.1dp"
        android:background="@color/bg_main" />
</LinearLayout>