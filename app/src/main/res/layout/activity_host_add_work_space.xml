<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".Activity_hostAddWorkSpace">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/addSpace_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_main"
        android:theme="@style/ToolbarTheme" />

    <!--배경 위에 흰 색 카드-->
    <!--흰 색 카드 안에 등록 양식 배치-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bg_card_blue">

            <LinearLayout
                android:elevation="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/item_bg_card"
                android:layout_marginHorizontal="20dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">


                <!--android:paddingVertical="30dp"-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="사무실 주소"
                    android:textColor="@color/bg_main"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/work_space_address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="(클릭) 주소검색"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />
                <!--b. 사업장 위치 검색-->

                <!--b. 사업장 위치 입력-->
                <EditText
                    android:id="@+id/work_space_address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:hint="나머지 주소"
                    android:inputType="textPersonName"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="사무실 이름"
                    android:textColor="@color/bg_main"
                    android:textSize="20dp"/>

                <!--a. 사무실 이름-->
                <EditText
                    android:id="@+id/work_space_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="15dp"
                    android:hint="예) 디아일랜드 강남점"
                    android:inputType="textPersonName"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="사무실 연락처"
                    android:textColor="@color/bg_main"
                    android:textSize="20dp"/>

                <!--a. 사무실 이름-->
                <EditText
                    android:id="@+id/work_space_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="15dp"
                    android:hint="숫자만 입력해주세요"
                    android:inputType="number|phone"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />

                <!--c. 이용 날짜 혹은 이용 기간-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="테이블 수"
                    android:textColor="@color/bg_main"
                    android:textSize="20dp"/>

                <!--a. 사무실 이름-->
                <EditText
                    android:id="@+id/work_space_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="15dp"
                    android:hint="이용 가능한 인원"
                    android:inputType="number"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />

                <!--e. 이용 시간 요금 혹은 이용 기간별 요금-->
                <!--c. 이용 날짜 혹은 이용 기간-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="요금"
                    android:textColor="@color/bg_main"
                    android:textSize="20dp"/>

                <!--a. 사무실 이름-->
                <EditText
                    android:id="@+id/work_space_price_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="15dp"
                    android:hint="하루 이용 요금 (원)"
                    android:inputType="number"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/work_space_price_w"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="15dp"
                    android:hint="1주일 이용 요금 (원)"
                    android:inputType="number"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/work_space_price_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="15dp"
                    android:hint="4주일 이용 요금 (원)"
                    android:inputType="number"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />
                <!--android:paddingVertical="30dp"-->

                <!--f. 다중 이미지 다음 페이지에서-->

                <!--e. 이용 시간 요금 혹은 이용 기간별 요금-->
                <!--c. 이용 날짜 혹은 이용 기간-->
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginVertical="10dp"-->
                    <!--android:layout_marginTop="40dp"-->
                    <!--android:text="(다음 페이지)"-->
                    <!--android:textColor="@color/bg_main"-->
                    <!--android:textSize="20dp"/>-->

                <!--입력완료 버튼-->
                <Button
                    android:id="@+id/work_space_next_page"
                    android:background="@drawable/item_button_white"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginVertical="30dp"
                    android:textColor="@color/bg_main"
                    android:textSize="20dp"
                    android:text="소개작성 및 사진 선택"/>

                <Button
                    android:id="@+id/work_space_edit_next_page"
                    android:background="@drawable/item_button_white"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginVertical="30dp"
                    android:textColor="@color/bg_main"
                    android:visibility="gone"
                    android:textSize="20dp"
                    android:text="소개수정 및 사진 선택"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
