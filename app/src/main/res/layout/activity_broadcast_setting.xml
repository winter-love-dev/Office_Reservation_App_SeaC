<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Wowza.Activity_Broadcast_Setting">

    <VideoView
        android:id="@+id/broadcast_setting_video_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/wowza_setting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:theme="@style/ToolbarTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#00000000"
                android:orientation="horizontal">

                <!--&lt;!&ndash;로고 이미지&ndash;&gt;-->
                <!--<ImageView-->
                    <!--android:layout_width="80dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:padding="1dp"-->
                    <!--android:src="@drawable/logo_3" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="방송을 준비합니다"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="italic" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginVertical="50dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="제목을 입력하세요"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <!--b. 사업장 위치 입력-->
            <EditText
                android:id="@+id/wowza_setting_title_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/item_edit_text_1"
                android:gravity="center"
                android:hint="_"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#80ffffff"
                android:textSize="20dp"
                android:theme="@style/LoginAndRegister" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00000000"
            android:gravity="center"
            android:orientation="horizontal">

            <!--&lt;!&ndash;로고 이미지&ndash;&gt;-->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:src="@drawable/logo_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:text="BroadCast"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>

        <!--저작권 표시-->
        <!--모든 저작권은 김성훈에게 있습니다. 모든 페이지 내용의 소유권은 김성훈이 가지고 있습니다.-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Copyright(c)2019 by 김성훈. \n All Page content is \n property of 김성훈."
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <!--<View-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="0.1dp"-->
        <!--android:background="#ffffff" />-->

        <TextView
            android:id="@+id/wowza_setting_start_broadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#8090a7d1"
            android:gravity="center"
            android:padding="15dp"
            android:text="방송 시작"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </LinearLayout>

</RelativeLayout>


