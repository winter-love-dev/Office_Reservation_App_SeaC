<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bg_card_list"
    android:layout_margin="10dp"
    android:elevation="11dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/item_bg_card_list"
            android:layout_width="match_parent"
            android:layout_height="230dp">

            <ImageView
                android:background="@drawable/item_home_list_image"
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_2" />

            <TextView
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="20dp"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="30dp"
                android:id="@+id/work_name"
                android:background="@drawable/item_gra_home_list_title"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사무실 이름" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/bg_main"
                android:id="@+id/work_address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="italic"
                android:textSize="15dp"
                android:text="주소" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/gray"
                    android:id="@+id/work_price"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="가격" />

                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/gray"
                    android:id="@+id/work_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="테이블 수" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>